<?xml version="1.0"?>
<config>
    <tabs>
        <digitalup>
            <label>Digital Up</label>
            <sort_order>200</sort_order>
        </digitalup>
    </tabs>
    <sections>
        <digitalup_fbpixel translate="label">
            <label>Facebook Pixel</label>
            <tab>digitalup</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <visitor translate="label">
                    <label>Facebook Pixel</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>1</sort_order>
                    <fields>
                        <enabled translate="label" module="digitalup_fbpixel">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <pixel_id translate="label">
                            <label>Pixel ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>This is the pixelId for the facebook pixel (see the install guide for instructions on where to find this).</comment>
                        </pixel_id>
                        <dynamic translate="label">
                            <label>Dynamic Remarketing</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable to start dynamic remarketing and provide additional data to facebook.</comment>
                        </dynamic>
                    </fields>
                </visitor>
                <conversion translate="label">
                    <label>Conversion Event (Optional)</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>2</sort_order>
                    <fields>
                        <enabled translate="label" module="digitalup_fbpixel">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The base pixel must be enabled to track conversions.</comment>
                        </enabled>
                    </fields>
                </conversion>
                <debugging translate="label">
                    <label>Debugging</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>3</sort_order>
                    <fields>
                        <enable_debugging translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The base pixel must be enabled to track conversions.</comment>
                        </enable_debugging>
                        <developer_ip translate="label">
                            <label>Developer IP</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Set your ip and you will see a dump on top of every page of the modul output. Currently only one IP is allowed.</comment>
                        </developer_ip>
                    </fields>
                </debugging>
            </groups>
        </digitalup_fbpixel>
    </sections>
</config>
